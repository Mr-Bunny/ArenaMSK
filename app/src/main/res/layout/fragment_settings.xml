<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/settings_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/montserrat_bold"
            android:lineSpacingExtra="5dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:text="Настройки"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/settings_geo_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Передача геоданных"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/settings_title"/>

        <TextView
            android:id="@+id/notification_title"
            style="@style/FilterTextSubtitle"
            android:text="Уведомления"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/settings_geo_btn"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <LinearLayout
            android:id="@+id/notification_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:background="@drawable/filter_spinner_background"
            android:padding="1dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/notification_title">

            <org.angmarch.views.NiceSpinner
                android:id="@+id/spinner_notifications"
                style="@style/FilterText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@drawable/filter_spinner_background"
                app:textTint="@color/text_color_grey_light"
                app:arrowDrawable="@drawable/ic_spinner_arrow" />

        </LinearLayout>

        <TextView
            android:id="@+id/settings_password_change"
            style="@style/FilterTextSubtitle"
            android:text="Изменить пароль"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/notification_container"/>

        <com.example.arenamsk.custom_view.sign_up_edit_text.CustomSignUpPasswordEditText
            android:id="@+id/current_password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/settings_password_change" />

        <com.example.arenamsk.custom_view.sign_up_edit_text.CustomSignUpPasswordEditText
            android:id="@+id/new_password_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            app:layout_constraintLeft_toLeftOf="@id/current_password_edit_text"
            app:layout_constraintRight_toRightOf="@id/current_password_edit_text"
            app:layout_constraintTop_toBottomOf="@id/current_password_edit_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/change_password_btn"
            style="@style/FilterResetButton"
            android:layout_width="0dp"
            android:layout_marginBottom="28dp"
            android:text="Изменить пароль"
            app:cornerRadius="25dp"
            android:layout_marginTop="32dp"
            app:strokeColor="@color/colorPrimary"
            app:strokeWidth="1dp"
            app:layout_constraintLeft_toLeftOf="@id/current_password_edit_text"
            app:layout_constraintRight_toRightOf="@id/current_password_edit_text"
            app:layout_constraintTop_toBottomOf="@id/new_password_edit_text"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>